<body>
    <div class="container">
        <h1>Cek Eligible Wallet</h1>
        <input type="text" id="walletAddress" placeholder="Masukkan wallet address Anda...">
        <button onclick="checkEligibility()">Cek Eligibility</button>
        <div id="result"></div>
    </div>

    <script>
        async function checkEligibility() {
            const walletAddress = document.getElementById('walletAddress').value.trim();
            const resultDiv = document.getElementById('result');
            
            if(!walletAddress) {
                resultDiv.innerHTML = '<p style="color: red">Silakan masukkan wallet address</p>';
                return;
            }

            resultDiv.innerHTML = 'Memeriksa...';
            
            try {
                const response = await fetch(`https://script.google.com/macros/s/AKfycbzUzptbTkMAubJNF2bgw-yZzRtvmQ7kIhwZWV4w8lz6PvNsLe-udJrhKg7VloZr6Kks/exec?wallet=${encodeURIComponent(walletAddress)}`);
                const data = await response.json();
                
                if(data.eligible) {
                    resultDiv.innerHTML = `
                        <div style="color: green; background: #e8f5e9; padding: 15px;">
                            <h3>üéâ Eligible! üéâ</h3>
                            <p>Jumlah Eligible: ${data.amount}</p>
                            <p>Alamat: ${data.address}</p>
                        </div>
                    `;
                } else {
                    resultDiv.innerHTML = `<div style="color: red; background: #ffebee; padding: 15px;">
                        <h3>‚ùå Tidak Eligible</h3>
                        <p>Alamat tidak ditemukan dalam daftar eligible</p>
                    </div>`;
                }
            } catch (error) {
                resultDiv.innerHTML = `<p style="color: red">Error: Gagal memeriksa eligibility</p>`;
            }
        }
    </script>
</body>
</html>
